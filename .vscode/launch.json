{
  "version": "0.2.0",
  "configurations": [
    { "name": "Python Debugger: Current File",
      "cwd": "${workspaceFolder}/py",
      "type": "debugpy", "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Backend",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}/back",
      "console": "integratedTerminal"
    },
    {
      "name": "Frontend",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}/front",
      "console": "integratedTerminal"
    },
    {
      "name": "route",
      "type": "node",
      "request": "launch",
      "program": "route.js",
      "cwd": "${workspaceFolder}/front/src/helpers",
      "console": "integratedTerminal",
    },
    {
      "name": "Browser Start",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/front/src",
      "skipFiles": [
        "**/node_modules/**",
        "<node_internals>/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "‚ù§ ALL",
      "configurations": [
        "Backend",
        "Frontend",
        "Browser Start"
      ],
      "stopAll": true
    }
  ]
}